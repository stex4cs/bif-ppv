RewriteEngine On

# Dynamic fighter pages - must be BEFORE static .html rules
# Matches /borci/slug (but not index or borac.php itself)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/borci/(index\.php|borac\.php)$
RewriteRule ^([a-z0-9\-]+)$ borac.php?slug=$1 [L,QSA]

# Remove .html extension from URLs (for existing static files)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect .html URLs to clean URLs
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]
